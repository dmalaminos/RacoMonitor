{
    "manifest_version": 2,
    
    "name": "RacoMonitor",
    "description": "Notification manager for Racó de la FIB (UPC)",
    "version": "1.0.3",
    "author": "David Martín Alaminos",
    
    "permissions": [
        "https://raco.fib.upc.edu/*",
        "http://raco.fib.upc.edu/*",
        "https://raco.fib.upc.edu/oauth/request_token",
        "https://raco.fib.upc.edu/oauth/protected/authorize",
        "https://raco.fib.upc.edu/oauth/access_token",
        "https://www.dropbox.com/*",
        "alarms",
        "background",
        "notifications"
    ],
    
    "background": {
        "scripts": ["js/i18n.js", "js/moment.js", "js/jsOAuth-1.3.7.js", "js/background.js"]
    },
    
    "browser_action": {
        "default_icon": "fibicon_1_16x16x32.png",
        "default_popup": "popup.html",
        "default_title": "RacóMonitor"
    },
    
    "icons": { 
        "16": "fibicon_1_16x16x32.png",
        "48": "fibicon_1_48x48x32.png",
        "128": "fibicon_1_128x128x32.png" },
    
    "web_accessible_resources": [
        "fibicon_1_16x16x32.png",
        "fibicon_2_128x128x32.png"
    ]
}